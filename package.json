{
  "name": "depon",
  "version": "0.0.2",
  "description": "This library explores and visualizes project dependencies, offering both CLI-based text output and an interactive visualizer for intuitive understanding of file relationships.",
  "repository": {
    "type": "git",
    "url": "https://github.com/cut0/depon.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "lint:check": "biome ci",
    "lint:fix": "biome check --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "build": "tsc -p ./tsconfig.build.json && tsx ./build.ts",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "Depon",
    "Dependency",
    "Visualizer",
    "Graph",
    "CLI",
    "Library",
    "Tool",
    "File"
  ],
  "author": "Cut0",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.1",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.8",
    "@commitlint/cli": "19.5.0",
    "@types/node": "22.5.5",
    "esbuild": "0.23.1",
    "tsx": "4.19.1",
    "typescript": "5.6.2",
    "vitest": "2.1.1"
  },
  "packageManager": "pnpm@9.10.0",
  "dependencies": {
    "commander": "12.1.0",
    "minimatch": "10.0.1",
    "ts-morph": "23.0.0"
  }
}
